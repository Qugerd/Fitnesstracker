<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_nav_graph"
    app:startDestination="@id/fragmentSwitcher">

    <fragment
        android:id="@+id/fragmentSwitcher"
        android:name="com.example.fitnesstracker.FragmentSwitcher"
        android:label="TabsFragment" >
        <action
            android:id="@+id/action_tabsFragment_to_myDetalizationFragment"
            app:destination="@id/detailsMy"/>
        <action
            android:id="@+id/action_tabsFragment_to_usersDetalizationFragment"
            app:destination="@id/detailsUsers" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.fitnesstracker.ProfilePage"
        android:label="ProfileFragment" />
    <fragment
        android:id="@+id/detailsMy"
        android:name="com.example.myapplication.Detalizations.DetailsMy"
        android:label="MyDetalizationFragment" />
    <fragment
        android:id="@+id/detailsUsers"
        android:name="com.example.myapplication.Detalizations.DetailsUsers"
        android:label="UsersDetalizationFragment" />
</navigation>